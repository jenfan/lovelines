@font-face {
    font-family: 'ultralight'; /*a name to be used later*/
    src: url(<%= asset_path 'avenirnext-regular.ttf' %>); /*URL to font*/
}
@font-face {
    font-family: 'regular'; /*a name to be used later*/
    src: url(<%= asset_path 'avenirnext-ultralight.ttf' %>); /*URL to font*/
}


#menu li a {
	font-family: 'ultralight'
}
#menu a.active {
	font-weight: 700;
}
.row {
	margin-bottom: 8px;
}
.column, .columns {
	margin-left: 2%;
}
div.four:hover {
	opacity: 0.9;
}
#title {
	color: black;
    margin: auto;
    width: 60%;
    padding: 10px;
    padding-right: 20px;
    font-weight: 900;
    font-family: 'regular';
}
.body#home {
	height: 60%;
	width: 100%;
	overflow: hidden;
}
.bottom {
	position: absolute;
	bottom: 10px;
	width: 100%;
	line-height: 1.2;
}
.bottom p {
	padding: 0;
	margin: 0;
	font-weight: 200;
}
.center {
	margin: 0 auto;
}

a.prev, a.next, a.close {
	background-repeat: no-repeat;
	border: 0px !important;
	width: 80px !important;
	height: 80px !important;
}
a.close {
	background-image: url(<%= asset_path 'close.png' %>) !important;
	background-position: center center;
}
a.prev {
	background-image: url(<%= asset_path 'left_arrow.png' %>) !important;
	background-position: center center;
}
a.next {
	background-image: url(<%= asset_path 'right_arrow.png' %>) !important;
	background-position: center center;
}